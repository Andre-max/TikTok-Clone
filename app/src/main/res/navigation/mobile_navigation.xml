<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/profileWithoutAccountFragment"
        android:name="com.andre_max.tiktokclone.ui.ProfileWithoutAccountFragment"
        android:label="Sign up"
        tools:layout="@layout/fragment_profile_without_account"/>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.andre_max.tiktokclone.ui.InboxFragment"
        android:label="Discover"
        tools:layout="@layout/fragment_inbox" />

    <fragment
        android:id="@+id/inboxFragment"
        android:name="com.andre_max.tiktokclone.ui.SearchFragment"
        android:label="Inbox"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.andre_max.tiktokclone.ui.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/sign_up_page">
        <action
            android:id="@+id/action_signUpFragment_to_ageFragment"
            app:destination="@id/ageFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_createUsernameFragment"
            app:destination="@id/createUsernameFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_createUsernameFragment2"
            app:destination="@id/createUsernameFragment" />
    </fragment>
    <fragment
        android:id="@+id/ageFragment"
        android:name="com.andre_max.tiktokclone.ui.AgeFragment"
        android:label="Sign up"
        tools:layout="@layout/fragment_age">
        <action
            android:id="@+id/action_ageFragment_to_basicSignUpFragment"
            app:destination="@id/basicSignUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/createUsernameFragment"
        android:name="com.andre_max.tiktokclone.ui.CreateUsernameFragment"
        android:label="fragment_create_username"
        tools:layout="@layout/fragment_create_username" >
        <action
            android:id="@+id/action_createUsernameFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="credential"
            app:argType="com.google.firebase.auth.AuthCredential"
            app:nullable="true"/>
        <argument
            android:name="signUpUsername"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="signUpProfilePicture"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="emailBody"
            app:argType="com.andre_max.tiktokclone.EmailBody"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.andre_max.tiktokclone.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_profileWithAccountFragment"
            app:destination="@id/profileWithAccountFragment" />
    </fragment>
    <fragment
        android:id="@+id/createVideoFragment"
        android:name="com.andre_max.tiktokclone.ui.CreateVideoFragment"
        android:label="CreateVideoFragment"
        tools:layout="@layout/fragment_create_video">
        <action
            android:id="@+id/action_createVideoFragment_to_previewVideoFragment"
            app:destination="@id/previewVideoFragment" />
    </fragment>
    <fragment
        android:id="@+id/basicSignUpFragment"
        android:name="com.andre_max.tiktokclone.ui.BasicSignUpFragment"
        android:label="BasicSignUpFragment"
        tools:layout="@layout/fragment_basic_sign_up">
        <action
            android:id="@+id/action_basicSignUpFragment_to_createPasswordFragment"
            app:destination="@id/createPasswordFragment" />
        <action
            android:id="@+id/action_basicSignUpFragment_to_enterCodeFragment"
            app:destination="@id/enterCodeFragment" />
        <action
            android:id="@+id/action_basicSignUpFragment_to_createUsernameFragment"
            app:destination="@id/createUsernameFragment" />
    </fragment>
    <fragment
        android:id="@+id/createPasswordFragment"
        android:name="com.andre_max.tiktokclone.ui.CreatePasswordFragment"
        android:label="fragment_create_password"
        tools:layout="@layout/fragment_create_password" >
        <action
            android:id="@+id/action_createPasswordFragment_to_createUsernameFragment"
            app:destination="@id/createUsernameFragment" />
        <argument
            android:name="email"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/enterCodeFragment"
        android:name="com.andre_max.tiktokclone.ui.EnterCodeFragment"
        android:label="EnterCodeFragment"
        tools:layout="@layout/fragment_enter_code">
        <action
            android:id="@+id/action_enterCodeFragment_to_createUsernameFragment"
            app:destination="@id/createUsernameFragment" />
    </fragment>
    <fragment
        android:id="@+id/meFragment"
        android:name="com.andre_max.tiktokclone.MeFragment"
        android:label="MeFragment"
        tools:layout="@layout/fragment_me">
        <action
            android:id="@+id/action_meFragment_to_eachTikTokVideo"
            app:destination="@id/eachTikTokVideo" />
        <action
            android:id="@+id/action_meFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/eachTikTokVideo"
        android:name="com.andre_max.tiktokclone.ui.EachTikTokVideo"
        android:label="EachTikTokVideo"
        tools:layout="@layout/each_tiktok_video">
        <argument
            android:name="remoteVideo"
            app:argType="com.andre_max.tiktokclone.RemoteUserVideo" />
        <action
            android:id="@+id/action_eachTikTokVideo_to_profileWithAccountFragment"
            app:destination="@id/profileWithAccountFragment" />
    </fragment>
    <fragment
        android:id="@+id/previewVideoFragment"
        android:name="com.andre_max.tiktokclone.ui.PreviewVideoFragment"
        android:label="PreviewVideoFragment"
        tools:layout="@layout/fragment_preview_video">
        <argument
            android:name="localUserVideo"
            app:argType="com.andre_max.tiktokclone.LocalUserVideo" />
        <action
            android:id="@+id/action_previewVideoFragment_to_postVideoFragment"
            app:destination="@id/postVideoFragment" />
    </fragment>
    <fragment
        android:id="@+id/postVideoFragment"
        android:name="com.andre_max.tiktokclone.ui.PostVideoFragment"
        android:label="PostVideoFragment"
        tools:layout="@layout/fragment_post_video">
        <argument
            android:name="localUserVideo"
            app:argType="com.andre_max.tiktokclone.LocalUserVideo" />
        <action
            android:id="@+id/action_postVideoFragment_to_eachTikTokVideo"
            app:destination="@id/eachTikTokVideo"
            app:popUpTo="@id/meFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileWithAccountFragment"
        android:name="com.andre_max.tiktokclone.ui.ProfileWithAccountFragment"
        android:label="ProfileWithAccountFragment"
        tools:layout="@layout/fragment_profile_with_account">

        <argument
            android:name="uid"
            app:argType="string"
            app:nullable="true" />
    </fragment>

</navigation>